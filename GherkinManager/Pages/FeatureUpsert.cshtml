@page
@model GherkinManager.Pages.FeatureUpsertModel

<br />
<h2 class="text-info">@(Model.Feature.Id != 0 ? "Edit feature" : "Create feature") </h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Feature.Id != 0)
        {
            <input type="hidden" asp-for="Feature.Id" />
        }
        <input type="hidden" asp-for="Feature.ProjectId" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Feature.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Feature.Name" class="form-control" />
            </div>
            <span asp-validation-for="Feature.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Feature.Owner"></label>
            </div>
            <div class="col-6">
                <input asp-for="Feature.Owner" class="form-control" />
            </div>
            <span asp-validation-for="Feature.Owner" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Feature.Content"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Feature.Content" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Feature.Content" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-success form-control">@(Model.Feature.Id != 0 ? "Save" : "Create") </button>
            </div>
            <div class="col-3">
                <a asp-page="ProjectUpsert" asp-route-id="@Model.ProjectId" class="btn btn-info form-control">Back to Project</a>
            </div>
        </div>
    </form>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}