@page
@model GherkinManager.Pages.ProjectUpsertModel

<br />
<h2 class="text-info">@(Model.Project.Id != 0 ? "Edit project" : "Create project") </h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Project.Id != 0)
        {
            <input type="hidden" asp-for="Project.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Name" class="form-control" />
            </div>
            <span asp-validation-for="Project.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Owner"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Owner" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.StartDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.StartDate" class="form-control"  />
            </div>
            <span asp-validation-for="Project.StartDate" class="text-danger"></span>

        </div>
        <div class=" form-group row">
            <div class="col-4">
                <label asp-for="Project.EndDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.EndDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">@(Model.Project.Id != 0 ? "Save" : "Create") </button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Projects</a>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10">
                <h5>Feature files</h5>
            </div>
        </div>
        <div class="form-group row">
            @if (Model.Features.Count() > 0)
            {
                <div class="col-10">
                    <table class="table-borderless">
                        @foreach (var feature in Model.Features)
                        {
                            <tr>
                                <td>
                                    <h5>@Html.DisplayFor(m => feature.Name)</h5>
                                </td>
                                <td>
                                    <a asp-page="FeatureUpsert" asp-route-projectId="@Model.Project.Id" asp-route-id="@feature.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                </td>
                                <td>
                                    <button asp-page-handler="Delete" asp-route-id="@feature.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

            }
            else
            {
                <p3>No features yet.</p3>
            }
        </div>
        <div class="form-group row">
            <div class="col-10">
                <a asp-page="FeatureUpsert"  asp-route-projectId="@Model.Project.Id" class="btn btn-success btn-sm text-white">Create feature</a>
            </div>
        </div>

    </form>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}